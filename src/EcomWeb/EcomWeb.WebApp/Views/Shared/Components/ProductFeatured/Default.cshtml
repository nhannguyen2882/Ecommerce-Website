@model IEnumerable<EcomWeb.Contracts.Dtos.ProductDto>
<link rel="stylesheet" href="~/css/productFeatured.css"/>
<link rel="stylesheet" href="~/css/grid.css" />
<script src="~/js/grid.js"></script>
<h4>Product Featured</h4>

<div class="row px-5 pt-5">
    @foreach (var product in Model)
    {
        <div class="spe-prods mb-4 ">
            <div class="mainbox">
                <h3>@product.Name</h3>
                <img class="rotprod" src="img/donut.png" alt="">
            </div>
            <div class="price-big">
                <div>
                    <div class="floatting-price">
                        <h3>$@product.Price</h3>
                    </div>
                    <div class="month">
                        <p></p>
                    </div>
                </div>
                <div class="ordersection">
                    <a href="#" class="buybtn">Add to cart</a>
                </div>
            </div>
        </div>

       
    }

</div>

